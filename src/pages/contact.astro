---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import Calendly from '../components/Calendly.astro';
import FAQ from '../components/FAQ.astro';
import Banner from '../components/Banner.astro';
import '../styles/global.css';
---

<BaseLayout>
  <Banner
    headerText={`Get in Touch`}
    bodyText={`We are looking for each other. Fill in the form and we will be in touch shortly.
    Alternatively, if you're ready to lock in a chat, schedule a 30min call via the Calendly booking below.`}
    backgroundPosition="bottom 20% right 25%"
  />
  <ContactForm />
  <Calendly />
  <FAQ />
</BaseLayout>

