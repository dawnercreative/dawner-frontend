---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageDescription from '../components/PageDescription.astro';
import ServicesOnOffer from '../components/ServicesOnOffer.astro';
import Banner from '../components/Banner.astro';
import BannerImage from '../components/BannerImage.astro';
// import Results from '../components/Results.astro';
import FAQ from '../components/FAQ.astro';
import SectionWrapper from '../layouts/SectionWrapper.astro';
import '../styles/global.css';

title: 'Home | Dawner Creative: Web Design & Development';
---

<BaseLayout>
  <Banner
    headerText={`Website design & development`}
    bodyText={`Elevate your online presence with bespoke web solutions tailored to your unique brand.`}
    backgroundImage={['/images/vector1.png', '/images/vector.png']}
    backgroundPosition={['right', 'left 80%']}
    backgroundImageMobile={['/images/vector1-mobile.png']}
    extraPadding={true}
  />
  <BannerImage imageSrc="/images/banner-2.jpg" />
  <PageDescription
    firstText={`At Dawner Creative, we specialize in providing a full range of website design and development services, specifically tailored for sole traders and small businesses looking to carve out their unique space online. 
    `}
    secondText={`We are passionate about crafting bespoke solutions that not only meet but exceed the individual needs and goals of each client, ensuring your digital presence is both impactful and reflective of your unique business identity.`}
  />
  <ServicesOnOffer />
  <SectionWrapper />
  <!-- <Results /> -->
  <FAQ />
</BaseLayout>

<style>
  .banner-container {
    background-image: var(--background-image);
    background-position: var(--background-position);
  }

  .banner-container > p {
    font-size: 1.75rem;
  }
</style>
