---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageDescription from '../components/PageDescription.astro';
import ServicesOnOffer from '../components/ServicesOnOffer.astro';
import Banner from '../components/Banner.astro';
import FAQ from '../components/FAQ.astro';
import SectionWrapper from '../layouts/SectionWrapper.astro';
import '../styles/global.css';
---

<BaseLayout>
  <Banner
    headerText={`Website design & development`}
    bodyText={`Elevate your online presence with bespoke web solutions tailored to your unique brand.`}
    backgroundImage="/images/banner-2.jpg"
  />
  <div>
    <div class="banner-image">
      <img
        src="/images/banner.png"
        alt="Desk with laptop and paper"
        width="100%"
      /></div
    >

    <PageDescription
      firstText={`At Dawner Creative, we offer a comprehensive suite of website design and development 
    services to bring your digital vision to life. 
    
    `}
      secondText={`Our team is committed to delivering bespoke solutions tailored to each client's unique needs.`}
    />
    <ServicesOnOffer />
    <SectionWrapper>
      <div class="results-container">
        <h2>See DAWNER CREATIVE<br />results for yourself</h2>
        <div class="image-row">
          <img
            src="/images/portfolio-2.jpg"
            alt="landing page for a dance studio"
          />
          <img
            src="/images/portfolio-1.jpg"
            alt="landing page for a fasion company"
          />
          <img
            src="/images/portfolio-3.jpg"
            alt="youtube cover for a musicician"
          />
        </div>
      </div>
    </SectionWrapper>
  </div>
  <FAQ />
</BaseLayout>

<style>
  .banner-container > h1,
  p {
    width: 60%;
    padding-left: 8rem;
  }

  .banner-container > p {
    font-size: 1.75rem;
  }

  /* Results Section */
  .results-container {
    padding: 5rem 8rem;
  }

  .image-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .image-row img {
    flex: 1;
    max-width: 33%;
    max-height: auto;
  }

  @media screen and (max-width: 768px) {
    .image-row img {
      width: 100%;
      max-width: 100%;
    }

    .banner-container {
      background-position: top;
    }

    .results-container {
      padding: 2rem 2rem;
    }

    h2 {
      text-align: center;
      font-size: 1.5rem;
    }

    .image-row {
      flex-direction: column;
    }
  }
</style>
