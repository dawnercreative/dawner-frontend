---
import ContactButton from './ContactButton.astro';
---

<div
  class="top-nav-links"
  {...Astro.props}
>
  <button id="close-nav"
    ><img
      src="/images/close.svg"
      alt="close menu"
    /></button
  >
  <a href="/">Home</a>
  <a href="/about/">About</a>
  <a href="/services/">Services</a>
  <!-- <a href="/projects/">Projects</a> -->
  <div class="nav-contact-button">
    <ContactButton />
  </div>
</div>

<style>
  #close-nav {
    display: none;
  }

  .top-nav-links {
    display: flex;
    align-items: center;
    line-height: none;
    padding-right: 5rem;
  }

  .top-nav-links a {
    text-decoration: none;
    color: #3d3d40;
    font-family: 'Work Sans', sans-serif;
    margin-right: 4rem;
    font-size: 1rem;
  }

  @media screen and (max-width: 768px) {
    .top-nav-links {
      display: none;
      width: 100vw;
      position: absolute;
      left: 0;
      top: 0;
    }

    .top-nav-links a {
      text-decoration: none;
      float: right;
      margin-right: 1rem;
    }

    .top-nav-links.expanded {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      justify-content: space-around;
      background-color: #f5f5f5;
      padding: 1rem;
      height: 15rem;
      box-shadow: 2px 2px 5px 0px rgba(0, 0, 0, 0.75);
    }

    .expanded {
      display: flex;
    }

    #close-nav {
      display: block;
      border: none;
      background-color: #f5f5f5;
      cursor: pointer;
    }

    #close-nav img {
      height: 1.5rem;
    }

    .nav-contact-button {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
</style>
