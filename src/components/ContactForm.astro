<div class="form-container">
  <form method="POST">
    <input
      type="hidden"
      name="_captcha"
      value="false"
    />
    <input
      type="hidden"
      name="_next"
      value="http://localhost:4321/thankyou"
    />
    <input
      type="text"
      id="name"
      name="name"
      placeholder="FULL NAME*"
    /><br />

    <input
      type="tel"
      id="phone"
      name="phone"
      placeholder="PHONE*"
    /><br />

    <input
      type="email"
      id="email"
      name="email"
      placeholder="EMAIL ADDRESS*"
    /><br />

    <textarea
      id="message"
      name="message"
      placeholder="MESSAGE:"
    ></textarea><br />

    <input
      class="form-button"
      type="submit"
      value="Send Request"
    />
  </form>
</div>

<style>
  .form-container {
    display: flex;
    justify-content: center;
    background-color: white;
    padding: 5rem 8rem;
  }

  form {
    display: flex;
    flex-direction: column;
    max-width: 50rem;
  }

  input {
    border: 1.5px solid grey;
    border-radius: 1rem;
    height: 4rem;
    width: 50rem;
    margin-bottom: 1rem;
  }

  textarea {
    border-radius: 1rem;
    width: 100%;
    height: 10rem;
    padding-top: 1rem;
    margin-bottom: 2rem;
    border: 1.5px solid grey;
  }

  input,
  textarea {
    box-shadow: 1px 2px 2px 2px lightgray;
    padding-left: 2rem;
  }

  .form-button {
    border: 2px solid #5b5b5f;
    font-size: 1rem;
    font-weight: bold;
    color: white;
    background-color: #68686e;

    border-radius: 2rem;
    /* padding: 0.5rem 1.5rem; */
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  .form-button:hover {
    background-color: #8f8f96;
    border: 2px solid #838386;
    color: white;
    cursor: pointer;
  }

  .form-button:active {
    color: black;
    background-color: white;
    cursor: pointer;
  }
</style>
