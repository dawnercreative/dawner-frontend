---
import ContactButton from './ContactButton.astro';

const mainLinks = [
  { href: '/about/', label: 'About us', text: 'About' },
  { href: '/services/', label: 'Our services', text: 'Services' },
  // { href: '/projects/', label: 'Our projects', text: 'Projects' },
  { href: '/contact/', label: 'Contact us', text: 'Contact us' },
  { href: '/terms/', label: 'Terms of Services', text: 'Terms of Services' },
  { href: '/privacy-policy/', label: 'Privacy policy', text: 'Privacy policy' },
];

const socialLinks = [
  {
    href: 'https://www.facebook.com/profile.php?id=61555841081021',
    label: 'Visit our Facebook page',
    imgSrc: '/images/icons8-facebook.svg',
    target: '_blank',
  },
  {
    href: 'https://www.instagram.com/dawnercreative/',
    label: 'Visit our Instagram profile',
    imgSrc: '/images/icons8-instagram.svg',
    target: '_blank',
  },
];

let href = '/contact';
let text = 'Contact us';
---

<footer>
  <div class="work-with-us">
    <h2>Work with us</h2>
    <p
      >We would love to hear about your project! Get in touch and we will get
      back to you shortly.</p
    >
    <a
      class="footer-contact-button"
      href={href}
      >{text}</a
    >
    <hr />
  </div>
  <div class="footer-bottom-container">
    <div class="footer-nav-left">
      <h4>Pages</h4>
      <nav>
        {
          mainLinks.map((link) => (
            <a
              href={link.href}
              aria-label={link.label}
            >
              {link.text}
            </a>
          ))
        }
      </nav>
      <div class="social-links">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              aria-label={link.label}
              target={link.target}
            >
              <img
                src={link.imgSrc}
                alt={link.label}
              />
            </a>
          ))
        }
      </div>
    </div>
    <div class="footer-contact-right">
      <h4>Contact</h4>
      <p>+61 422 023 586</p>
      <p>Sunshine Coast, QLD, Australia</p>
      <p
        ><a
          class="email"
          href="mailto:hello@dawnercreative.com"
          >hello@dawnercreative.com</a
        ></p
      >
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: #21282b;
    color: white;
    padding: 2rem 8rem;
  }
  .footer-bottom-container {
    display: flex;
    justify-content: space-between;
    padding-right: 8rem;
  }

  footer > h2,
  h4 {
    color: white;
    font-weight: 500;
  }

  .work-with-us > h2 {
    color: white;
  }

  .footer-contact-button {
    float: right;
  }
  .work-with-us hr {
    height: 0.1rem;
    background-color: #f5f5f5;
  }

  .footer-nav-left nav {
    display: flex;
    flex-wrap: wrap;
    width: 40%;
    gap: 2rem;
    padding-bottom: 2rem;
  }

  .footer-contact-right p,
  .footer-contact-right a,
  .footer-nav-left a {
    font-size: 1.25rem;
    color: white;
  }

  .email {
    text-decoration: underline;
  }

  /* Contact us button */
  .footer-contact-button {
    border: 2px solid white;
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
    border-radius: 2rem;
    padding: 1rem 3.5rem;
    margin-bottom: 5rem;
    transition:
      background-color 0.3s,
      color 0.3s;
  }
  .footer-contact-button:hover {
    background-color: #68686e;
    border: 2px solid white;

    color: white;
  }

  .footer-contact-button:active {
    color: white;
    background-color: #a1a990;
  }

  @media screen and (max-width: 768px) {
    footer {
      padding: 2rem 2rem;
    }
    .footer-bottom-container {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }
    .footer-nav-left nav {
      width: 100%;
      justify-content: flex-start;
      gap: 0.5rem;
      padding-bottom: 1rem;
    }

    .footer-nav-left a {
      font-size: 0.75rem;
    }

    .footer-contact-button {
      font-size: 1rem;
      padding: 0.75rem 1.25rem;
      margin-bottom: 2rem;
    }

    img {
      height: 2rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    .footer-contact-right p,
    .footer-nav-left a,
    .footer-contact-right a {
      line-height: 1.5rem;
      font-size: 0.75rem;
    }

    /* .work-with-us p {
      font-size: 1rem;
    } */

    h4 {
      margin: 1rem 0;
    }
  }
</style>
