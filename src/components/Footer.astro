---
import ContactButton from './ContactButton.astro';

const mainLinks = [
  { href: '/about/', label: 'About us', text: 'About' },
  { href: '/services/', label: 'Our services', text: 'Services' },
  { href: '/projects/', label: 'Our projects', text: 'Projects' },
  { href: '/contact/', label: 'Contact us', text: 'Contact us' },
  { href: '/licensees/', label: 'Licensees information', text: 'Licensees' },
  { href: '/terms/', label: 'Terms of Services', text: 'Terms of Services' },
  { href: '/privacy-policy/', label: 'Privacy policy', text: 'Privacy policy' },
];

const socialLinks = [
  {
    href: 'https://www.facebook.com/',
    label: 'Visit our Facebook page',
    imgSrc: '/images/icons8-facebook.svg',
    target: '_blank',
  },
  {
    href: 'https://www.instagram.com/',
    label: 'Visit our Instagram profile',
    imgSrc: '/images/icons8-instagram.svg',
    target: '_blank',
  },
];

let href = '/contact';
let text = 'Contact us';
---

<footer>
  <div class="work-with-us">
    <h2>Work with us</h2>
    <p
      >We would love to hear about your project!<br />Get in touch and we will
      get back to you shortly.</p
    >
    <a
      class="footer-contact-button"
      href={href}
      >{text}</a
    >
    <hr />
  </div>
  <div class="footer-bottom-container">
    <div class="footer-nav-left">
      <h4>Pages</h4>
      <nav>
        {
          mainLinks.map((link) => (
            <a
              href={link.href}
              aria-label={link.label}
            >
              {link.text}
            </a>
          ))
        }
      </nav>
      <div class="social-links">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              aria-label={link.label}
              target={link.target}
            >
              <img
                src={link.imgSrc}
                alt={link.label}
              />
            </a>
          ))
        }
      </div>
    </div>
    <div class="footer-contact-right">
      <h4>Contact</h4>
      <p>+61 422 023 586</p>
      <p>Sunshine Coast, QLD, Australia</p>
      <p
        ><a
          class="email"
          href="mailto:hello@dawnercreative.com"
          >hello@dawnercreative.com</a
        ></p
      >
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: black;
    color: white;
    padding: 5rem 8rem;
  }
  .footer-bottom-container {
    display: flex;
    justify-content: space-between;
    padding-right: 8rem;
  }

  footer h2 {
    color: #fff;
    font-weight: 500;
  }

  .footer-contact-button {
    float: right;
  }
  .work-with-us hr {
    height: 0.1rem;
  }

  .footer-nav-left nav {
    display: flex;
    flex-wrap: wrap;
    width: 40%;
    gap: 2rem;
    padding-bottom: 2rem;
  }

  .footer-contact-right p,
  .footer-contact-right a {
    font-size: 1.25rem;
    color: rgba(189, 189, 189, 1);
  }

  .email {
    text-decoration: underline;
  }

  /* Contact us button */
  .footer-contact-button {
    border: 1px solid rgba(250, 250, 252, 1);
    font-size: 1.5rem;
    font-weight: bold;
    border-radius: 2rem;
    padding: 1rem 3.5rem;
    margin-bottom: 5rem;
    transition:
      background-color 0.3s,
      color 0.3s;
  }
  .footer-contact-button:hover {
    background-color: rgba(255, 255, 255, 0.25);
    border: 1px solid white;
    color: white;
  }

  .footer-contact-button:active {
    background-color: white;
    color: black;
  }
</style>
