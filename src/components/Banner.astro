---
import SectionWrapper from '../layouts/SectionWrapper.astro';

export interface BannerProps {
  headerText: string;
  bodyText: string;
  backgroundImage: string[];
  backgroundPosition: string[];
  extraPadding?: boolean;
}
const {
  headerText,
  bodyText,
  backgroundImage,
  backgroundPosition,
  extraPadding,
} = Astro.props as BannerProps;

const imageStyles = {
  'background-image': `url(${backgroundImage[0]}), url(${backgroundImage[1]})`,
  'background-position': `${backgroundPosition[0]}, ${backgroundPosition[1]}`,
};
---

<SectionWrapper
  id="about-banner"
  class:list={['banner-container', { 'extra-padding': extraPadding }]}
  style={imageStyles}
>
  <meta
    itemprop="name"
    content="Website Design & Development Banner"
  />
  <h1 class="header-text">{headerText}</h1>
  <p class="body-text">{bodyText}</p>
</SectionWrapper>

<style>
  /* Banner Section */
  .banner-container {
    display: flex;
    flex-direction: column;
    height: 30rem;
    background-image: var(--background-image);
    background-position: var(--background-position);
    background-repeat: no-repeat;
    text-align: center;
  }

  .body-text {
    font-size: 1.5rem;
  }

  .header-text {
    color: #775854;
    font-weight: 400;
  }

  .extra-padding h1,
  .extra-padding p {
    padding: 0 4rem;
  }

  @media screen and (max-width: 768px) {
    .banner-container {
      height: auto;
      display: flex;
      background-size: 30%;
    }

    .banner-container h1 {
      margin-top: 10%;
    }
    .banner-container h1,
    p {
      text-align: center;
    }

    .banner-container p {
      font-size: 1rem;
      padding: 0 2rem;
    }
  }
</style>
