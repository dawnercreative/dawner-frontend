---
import SectionWrapper from '../layouts/SectionWrapper.astro';

export interface BannerProps {
  headerText: string;
  bodyText: string;
  backgroundImage: string;
}
const { headerText, bodyText, backgroundImage } = Astro.props as BannerProps;
---

<SectionWrapper
  class:list={[
    'banner-container',
    { backgroundImage: `url(${backgroundImage})` },
  ]}
>
  <h1 class="headerText">{headerText}</h1>
  <p class="bodyText">{bodyText}</p>
</SectionWrapper>

<style>
  /* Banner Section */
  .banner-container {
    display: flex;
    justify-content: center;
    flex-direction: column;
    height: 50rem;
    background-image: url('/images/v752-ning-18.jpg');
    background-size: cover;
    background-attachment: fixed;
  }

  .banner-container > p {
    font-size: 1.75rem;
    width: 60%;
    padding-left: 8rem;
  }

  @media screen and (max-width: 768px) {
    .banner-container {
      height: 30rem;
    }

    .banner-container h1,
    p {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }
</style>
