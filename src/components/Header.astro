---
import Navigation from './Navigation.astro';
import Hamburger from './Hamburger.astro';
import '../styles/global.css';
---

<header>
  <img
    class="logo"
    src="images/dawnercreativelogo.png"
    alt="Dawner Creative Logo"
  />
  <nav>
    <Hamburger />
    <Navigation />
  </nav>
</header>

<style>
  header {
    height: 6rem;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    z-index: 3;
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .logo {
    margin-left: 2rem;
    margin-right: auto;
    max-height: 100%;
  }
</style>
