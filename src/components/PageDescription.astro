---
export interface PageDescriptionProps {
  firstText: string;
  secondText: string;
}
const { firstText, secondText } = Astro.props as PageDescriptionProps;
---

<section class="page-description">
  <p>
    <span class="first-text">{firstText}</span>
    <span class="second-text">{secondText}</span>
  </p>
  <hr />
</section>

<style>
  .page-description p {
    font-family: 'Work Sans', sans-serif;
    font-size: 3rem;
    font-style: normal;
    font-weight: 600;
    line-height: 175%;
    width: 90%;
    float: left;
  }

  .page-description {
    padding: 5rem 8rem;
    background-color: white;
  }

  .first-text {
    color: #3d3d40;
  }
  .second-text {
    color: #58595a;
  }

  @media (max-width: 768px) {
    .page-description p {
      font-size: 1rem;
    }
    .page-description {
      padding: 3rem 2rem;
    }
  }
</style>
