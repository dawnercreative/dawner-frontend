---
import SectionWrapper from '../layouts/SectionWrapper.astro';

export interface PageDescriptionProps {
  firstText: string;
  secondText: string;
}
const { firstText, secondText } = Astro.props as PageDescriptionProps;
---

<SectionWrapper
  class="page-description"
  itemscope
  itemtype="http://schema.org/WebPage"
>
  <meta
    itemprop="name"
    content="Home"
  />
  <meta
    itemprop="description"
    content="At Dawner Creative, we offer a comprehensive suite of website design and development services to bring your digital vision to life. Our team is committed to delivering bespoke solutions tailored to each client's unique needs."
  />
  <p>
    <span
      class="first-text"
      itemprop="text"
      >{firstText}</span
    >
    <span
      class="second-text"
      itemprop="text"
      >{secondText}</span
    >
  </p>
  <hr />
</SectionWrapper>

<style>
  .page-description p {
    font-family: 'Work Sans', sans-serif;
    font-weight: 600;
    font-size: 2.5rem;
    line-height: 175%;
    width: 90%;
    float: left;
  }

  .page-description {
    padding: 2rem 8rem;
  }

  .first-text {
    color: #3d3d40;
  }
  .second-text {
    color: #58595a;
  }

  @media (max-width: 768px) {
    .page-description p {
      font-size: 1rem;
    }
    .page-description {
      padding: 2rem;
    }
  }
</style>
